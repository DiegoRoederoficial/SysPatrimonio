@model IEnumerable<SysPatrimonio.Models.DbLocal>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Locais</h1>

<p>
    <a asp-action="Create">Novo Local</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomelocal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricaolocal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nomelocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.descricaolocal)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Deatalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
